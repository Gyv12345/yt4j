<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yt4j.crm.dao.CrmCustomerDao">

    <resultMap type="cn.yt4j.crm.entity.CrmCustomer" id="CrmCustomerMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="customerName" column="customer_name" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="createUserId" column="create_user_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateUserId" column="update_user_id" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="deptId" column="dept_id" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into crm_customer(customer_name, phone, create_user_id, create_time, update_user_id, update_time, dept_id)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.customerName}, #{entity.phone}, #{entity.createUserId}, #{entity.createTime}, #{entity.updateUserId}, #{entity.updateTime}, #{entity.deptId})
        </foreach>
    </insert>

</mapper>

